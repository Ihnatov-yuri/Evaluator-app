{
  "lm_studio": {
    "base_url": "http://127.0.0.1:1234/v1",
    "model_name": "gpt-oss-20b-mlx",
    "api_key": ""
  },
  "model_parameters": {
    "temperature": 0.3,
    "max_tokens": 6000,
    "top_p": 0.9,
    "frequency_penalty": 0.0,
    "presence_penalty": 0.0,
    "reasoning_level": "medium"
  },
    "evaluation": {
    "system_prompt_file": "system_prompt.txt",
    "user_data_file": "user_test_data.txt",
    "knowledge_base_file": "knowledge_base.txt",
    "timeout_seconds": 120,
    "retry_attempts": 3,
    "delay_between_tests": 2,
    "versioning": {
      "enabled": true,
      "date_format": "%Y%m%d_%H%M%S",
      "keep_latest_copy": true,
      "archive_folder": "evaluation_history"
    }
  },
  "rag": {
    "enabled": true,
    "use_plugin": "rag-v1",
          "plugin_config": {
        "retrievalLimit": 20,
        "retrievalAffinityThreshold": 0.3,
        "embedding_model": "nomic-ai/nomic-embed-text-v1.5-GGUF"
      },
    "search_depth": "medium",
    "parsing_instructions": {
      "chunk_strategy": "comprehensive",
      "focus_keywords": ["OfferId", "Indulge", "Gems", "Cashback", "Popular", "OfferCategoryTrained", "Merchant", "OfferDescription", "OfferDetails", "EndOffersDate", "ApplicableCards", "OfferCountry", "Keywords", "MerchantDetails", "true", "false", "yes", "no"],
      "retrieval_emphasis": "comprehensive_matches_for_all_keywords"
    }
  }
}
